{
  "name": "fusion-data",
  "version": "1.0.0",
  "description": "Fusion Data project with pnpm workspaces",
  "private": true,
  "scripts": {
    "dev": "pnpm run --parallel dev",
    "build": "pnpm run --recursive build",
    "test": "pnpm run --recursive test",
    "lint": "pnpm run --recursive lint",
    "clean": "pnpm run --recursive clean",
    "format": "pnpm run --recursive format",
    "format:check": "pnpm run --recursive format:check",
    "dev:hetuflow-web": "pnpm run --filter hetuflow-web dev",
    "dev:hetumind-web": "pnpm run --filter hetumind-web dev",
    "dev:jieyuan-web": "pnpm run --filter jieyuan-web dev"
  },
  "devDependencies": {
    "@types/node": "^24.5.1",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=22",
    "pnpm": ">=10.17.1"
  },
  "packageManager": "pnpm@10.17.1"
}
