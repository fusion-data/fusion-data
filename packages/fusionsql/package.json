{
  "name": "@fusion-data/fusionsql",
  "version": "1.0.0",
  "description": "Shared utilities for FusionSQL",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./page": {
      "import": "./dist/page.js",
      "types": "./dist/page.d.ts"
    },
    "./op": {
      "import": "./dist/op.js",
      "types": "./dist/op.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "clean": "rm -rf dist",
    "format": "prettier --write .",
    "format:check": "prettier --check ."
  },
  "keywords": [
    "fusionsql"
  ],
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.5.1",
    "jest": "^30.1.3",
    "prettier": "^3.3.3",
    "ts-jest": "^29.4.4",
    "typescript": "^5.9.2"
  },
  "files": [
    "dist"
  ],
  "dependencies": {
    "dayjs": "^1.11.18",
    "@fusion-data/fusion-core": "workspace:*"
  }
}
